<UserControl x:Class="inventory.Elements.InventoryCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="320">
    <Border BorderThickness="1"
            CornerRadius="6"
            Margin="6"
            BorderBrush="#DDDDDD"
            Background="White"
            Padding="0">
        <Grid Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Название -->
            <TextBlock Grid.Row="0" 
                       Text="{Binding Name}" 
                       FontSize="16"
                       FontWeight="SemiBold"
                       Margin="0,0,0,4"/>

            <!-- Период -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                <Canvas Width="20" Height="20">
                    <Path Data="M19,3H18V1H16V3H8V1H6V3H5C3.89,3 3,3.9 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"
                          Fill="#666666" Stretch="Uniform"/>
                </Canvas>
                <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}"
                           Margin="8,0,0,0"
                           FontSize="13"/>
                <TextBlock Text=" - "
                           Margin="2,0,2,0"
                           FontSize="13"/>
                <TextBlock Text="{Binding EndDate, StringFormat='{}{0:dd.MM.yyyy}'}"
                           FontSize="13"/>
            </StackPanel>

            <!-- Ответственный -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,8,0,0">
                <Canvas Width="20" Height="20">
                    <Path Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                          Fill="#666666" Stretch="Uniform"/>
                </Canvas>
                <TextBlock Text="{Binding User.FullName}" 
                           Margin="8,0,0,0"
                           FontSize="13"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <!-- Статистика -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,12,0,0">
                <Canvas Width="20" Height="20">
                    <Path Data="M9,20A1,1 0 0,1 8,21H5A1,1 0 0,1 4,20V15A1,1 0 0,1 5,14H7V10A1,1 0 0,1 8,9H12A1,1 0 0,1 13,10V14H15A1,1 0 0,1 16,15V20A1,1 0 0,1 15,21H12A1,1 0 0,1 11,20V18H9V20Z"
                          Fill="#666666" Stretch="Uniform"/>
                </Canvas>
                <TextBlock Text="{Binding Checks.Count, StringFormat='Проверок: {0}'}" 
                           Margin="8,0,0,0"
                           FontSize="13"
                           Foreground="#666666"/>
            </StackPanel>

            <!-- Кнопки действий -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
                <Button Command="{Binding DataContext.PerformCheckCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}"
                        ToolTip="Провести проверку"
                        Width="32" Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        Cursor="Hand">
                    <Viewbox Width="18" Height="18">
                        <Path Data="M21,7L9,19L3.5,13.5L4.91,12.09L9,16.17L19.59,5.59L21,7Z"
                              Fill="#0060AC"/>
                    </Viewbox>
                </Button>

                <Button Command="{Binding DataContext.GenerateReportCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}"
                        ToolTip="Создать отчет"
                        Width="32" Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="4,0,0,0"
                        Cursor="Hand">
                    <Viewbox Width="18" Height="18">
                        <Path Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"
                              Fill="#0060AC"/>
                    </Viewbox>
                </Button>

                <Button Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}"
                        ToolTip="Удалить"
                        Width="32" Height="32"
                        Background="Transparent"
                        BorderThickness="0"
                        Margin="4,0,0,0"
                        Cursor="Hand">
                    <Viewbox Width="18" Height="18">
                        <Path Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                              Fill="#E41613"/>
                    </Viewbox>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>