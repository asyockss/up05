<UserControl x:Class="inventory.Elements.InventoryCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="120" d:DesignWidth="300">
    <Border BorderBrush="{DynamicResource MaterialDesignDivider}" 
            BorderThickness="1" 
            CornerRadius="4" 
            Margin="4"
            Background="{DynamicResource MaterialDesignPaper}">
        <Grid Margin="8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Название -->
            <TextBlock Grid.Row="0" Text="{Binding Name}" 
                       FontWeight="Bold"/>

            <!-- Период -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,4,0,0">
                <TextBlock Text="{Binding StartDate, StringFormat='{}{0:dd.MM.yyyy}'}"/>
                <TextBlock Text=" - "/>
                <TextBlock Text="{Binding EndDate, StringFormat='{}{0:dd.MM.yyyy}'}"/>
            </StackPanel>

            <!-- Ответственный -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,4,0,0">
                <materialDesign:PackIcon Kind="Account" Width="16" Height="16"
                                        Foreground="{DynamicResource MaterialDesignBodyLight}"/>
                <TextBlock Text="{Binding User.FullName}" 
                           Margin="4,0,0,0"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <!-- Статистика -->
            <TextBlock Grid.Row="3" 
                       Text="{Binding Checks.Count, StringFormat='Проверок: {0}'}" 
                       Margin="0,4,0,0"
                       FontSize="12"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"/>

            <!-- Кнопки действий -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
                <Button Style="{StaticResource MaterialDesignToolButton}"
                        Command="{Binding DataContext.PerformCheckCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}"
                        ToolTip="Провести проверку">
                    <materialDesign:PackIcon Kind="Check" Width="16" Height="16"/>
                </Button>

                <Button Style="{StaticResource MaterialDesignToolButton}"
                        Command="{Binding DataContext.GenerateReportCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}"
                        Margin="4,0,0,0"
                        ToolTip="Создать отчет">
                    <materialDesign:PackIcon Kind="FileDocument" Width="16" Height="16"/>
                </Button>

                <Button Style="{StaticResource MaterialDesignToolButton}"
                        Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                        CommandParameter="{Binding}"
                        Margin="4,0,0,0"
                        ToolTip="Удалить">
                    <materialDesign:PackIcon Kind="Delete" Width="16" Height="16"/>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>