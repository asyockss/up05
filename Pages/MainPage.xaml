<Page x:Class="inventory.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Главная">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Панель навигации -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF0060AC" Height="50">
            <Button Content="Оборудование" Style="{StaticResource NavButtonStyle}" 
                    Command="{Binding NavigateToEquipmentCommand}"/>
            <Button Content="Расходники" Style="{StaticResource NavButtonStyle}" 
                    Command="{Binding NavigateToConsumablesCommand}"/>
            <Button Content="Аудитории" Style="{StaticResource NavButtonStyle}" 
                    Command="{Binding NavigateToRoomsCommand}"/>
            <Button Content="Инвентаризация" Style="{StaticResource NavButtonStyle}" 
                    Command="{Binding NavigateToInventoryCommand}"/>
            <Button Content="Пользователи" Style="{StaticResource NavButtonStyle}" 
                    Command="{Binding NavigateToUsersCommand}" 
                    Visibility="{Binding IsAdmin, Converter={StaticResource BoolToVisibilityConverter}}"/>
        </StackPanel>

        <!-- Контент -->
        <Frame x:Name="ContentFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>
        
    </Grid>
</Page>